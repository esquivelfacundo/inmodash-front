# Database Configuration
DATABASE_URL="sqlserver://username:password@localhost:1433/inmobiliaria_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3975"

# Email Configuration (for production)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@inmobiliaria-pro.com"

# Security Configuration
BCRYPT_ROUNDS="12"
SESSION_TIMEOUT="7d"
ACCESS_TOKEN_TIMEOUT="15m"
REFRESH_TOKEN_TIMEOUT="7d"

# Rate Limiting (optional - defaults are set in code)
RATE_LIMIT_LOGIN_MAX="5"
RATE_LIMIT_LOGIN_WINDOW="900000"
RATE_LIMIT_REGISTER_MAX="3"
RATE_LIMIT_REGISTER_WINDOW="3600000"

# CORS Configuration (for production)
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Monitoring and Logging (optional)
LOG_LEVEL="info"
SENTRY_DSN=""
ANALYTICS_ID=""

# Feature Flags (optional)
ENABLE_EMAIL_VERIFICATION="true"
ENABLE_PASSWORD_RESET="true"
ENABLE_AUDIT_LOGGING="true"
ENABLE_RATE_LIMITING="true"

# Development Only
DISABLE_AUTH_IN_DEV="false"
MOCK_EMAIL_SERVICE="true"
